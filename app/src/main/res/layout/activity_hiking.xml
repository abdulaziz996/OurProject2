<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hiking"
    android:background="#DCEFD1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="181dp"
            android:layout_height="72dp"

            android:background="#DCEFD1"
            android:src="@drawable/img" />
    </FrameLayout>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/img_7" />

    <TextView
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="450dp"
        android:text="The experience of drawing on coffee is a unique and enjoyable experience, as it gives creative people an opportunity to show their artistic talents in an innovative and different way. To save this experience, you can put a like mark" />

    <Button
        android:id="@+id/like_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom|end"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="550dp"
        android:background="@drawable/baseline_favorite_24" />
</RelativeLayout>